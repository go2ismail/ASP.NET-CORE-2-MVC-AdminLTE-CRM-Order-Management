@model string

<script type="text/javascript">
    $(document).ready(function () {

        (function ($) {
            function ModalInit() {
                var $this = this;

                function initilizeModel() {
                    $("#@Model").on('loaded.bs.modal', function (e) {
                    }).on('hidden.bs.modal', function (e) {
                        $(this).removeData('bs.modal');
                    });
                }
                $this.init = function () {
                    initilizeModel();
                }
            }
            $(function () {
                var self = new ModalInit();
                self.init();
            })
        }(jQuery))


    });

</script>